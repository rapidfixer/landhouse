.b-lefttab
  position absolute
  left 0
  top 0
  width $lefttab-width
  height 100%
  padding-top 45px
  padding-left 28px
  background-color $lefttab-color
  &_googlemap
    right 0
    left auto
    background-color transparent
  &__header
    font-size 34px
    font-family $daxlineLightFontFamily
    color white
    text-transform uppercase
    line-height 1
  &__subheader
    margin-top 12px
    font-size 18px
    font-family $daxlineLightFontFamily
    color rgba(255, 255, 255, 0.231)
    text-transform uppercase
    line-height 1
.b-leftmenu
  margin-top 40px
  &__item
    display block
    position relative
    list-style none
    height 44px
    a
      display inline-block
      float left
      box-sizing border-box
      height 44px
      padding 15px 0 16px
      margin-right 23px
      font-size 13px
      line-height 1
      font-family $daxlineLightFontFamily
      color white
      text-transform uppercase
      text-decoration none
    &_active
      &:after
        content ''
        display block
        width auto
        overflow hidden
        height 44px
        background-image url('data:image/png;base64,iVBORw0KGgoAAAANSUhEUgAAAAEAAAAsCAMAAACT+SJTAAAABlBMVEUAAABNVWK5VQ45AAAAAXRSTlMAQObYZgAAAA5JREFUeAFjIB4wMpAAAACFAAJkXq3qAAAAAElFTkSuQmCC')
        background-position 23px center
        background-repeat repeat-x

      a
        color #a4a9af
  
