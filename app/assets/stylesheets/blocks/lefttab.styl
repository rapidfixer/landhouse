.b-lefttab
  position absolute
  left 0
  top 0
  width $lefttab-width
  height 100%
  padding-top 45px
  padding-left 28px
  background-color $lefttab-color
  &__header
    font-size 34px
    font-family $daxlineLightFontFamily
    color white
    text-transform uppercase
    line-height 1
  &__subheader
    margin-top 12px
    font-size 18px
    font-family $daxlineLightFontFamily
    color rgba(255, 255, 255, 0.231)
    text-transform uppercase
    line-height 1
.b-leftmenu
  margin-top 40px
  &__item
    list-style none
    a
      display inline-block
      box-sizing border-box
      height 44px
      padding 15px 0 16px
      font-size 13px
      line-height 1
      font-family $daxlineLightFontFamily
      color white
      text-transform uppercase
      text-decoration none
    &_active a
      color #a4a9af
  
