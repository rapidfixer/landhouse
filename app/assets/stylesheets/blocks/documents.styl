.b-documents
  position relative
  width 688px
  top 20px
  left 20px
  background-color white
  padding 35px 0 35px 35px
  &-header
    height 23px
    lined(23px)
    h3
      float left
      margin-right 23px
  &-text
    padding 35px 35px 12px 0
    margin-bottom 30px
  &-box
    position relative
    box-sizing border-box
    width 623px
    padding 21px 199px 0 60px
    margin-right 30px
    margin-bottom 21px
    border 1px solid #d3d7d8
    max-height 500px
    overflow hidden
    transition all 0.3s
    // doc icon
    &:before
      content ''
      position absolute
      display block
      width 22px
      height 23px
      left 17px
      top 16px
      background-image url('data:image/png;base64,iVBORw0KGgoAAAANSUhEUgAAABYAAAAXCAMAAAA4Nk+sAAAABlBMVEUAAACMkZdLeeaXAAAAAXRSTlMAQObYZgAAAB1JREFUeAFjYMQKSBdmQAMEhRHayRZGAaNWUiUuAVDiAUVVijeIAAAAAElFTkSuQmCC');
    &_collapsed
      max-height 60px
      margin-bottom 11px
    &__header
      display inline-block
      font-size 15px
      font-family $arialFontFamily
      color rgb(77, 85, 98)
      margin-bottom 30px
    &__trigger
      position absolute
      right 20px
      top 20px
      width 31px
      height 17px
      cursor pointer
      background-image url('data:image/png;base64,iVBORw0KGgoAAAANSUhEUgAAAB8AAAARCAMAAAASeod7AAAAJ1BMVEUAAACpqq6pqq6pqq6pqq6pqq6pqq6pqq6pqq6pqq6pqq6pqq6pqq7aNm5YAAAADXRSTlMAHiA+P0BCQ1h2rev1nUAzRwAAAEtJREFUeAF9yrsRhFAMxdD7dsF8TP/1kilgRlZ6lE8rY//nHLmvron3VNfEkQG2AWYwTo4uZwZlBmEGYQZ4S2SAZYBt+MEyrMSH+wV7oQJ54qB60AAAAABJRU5ErkJggg==')
      .b-documents-box_collapsed &
        background-image url('data:image/png;base64,iVBORw0KGgoAAAANSUhEUgAAAB8AAAARCAMAAAASeod7AAAAJ1BMVEUAAACpqq6pqq6pqq6pqq6pqq6pqq6pqq6pqq6pqq6pqq6pqq6pqq7aNm5YAAAADXRSTlMAHiE+P0BCQ1h1rev1TntDaQAAAExJREFUeAF9yskNwCAQxVCThSyk/3ojjtbX4Ksfb6euQR812McWQPuEBN4JtAugDZeBt4G3Qb0NvA1yG+QWmPuAGuQWeFYb7m+5oeF+wmICeoC+m8EAAAAASUVORK5CYII=')
    &-doc
      position relative
      display block
      padding-left 30px
      padding-bottom 30px
      font-family $daxlineLightFontFamily
      line-height 1.2
      text-decoration none
      &:before
        content ''
        position absolute
        left 0
        top 0
        display block
        width 20px
        height 22px
        background-image url('data:image/png;base64,')
      &__name
        font-size 13px
        color rgb(120, 194, 71)
      &__size
        display block
        font-size 14px
        color rgb(167, 175, 182)
